generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Dog {
  id        String  @id @default(uuid())
  name      String
  breed     String
  age       Int?
  extraInfo String?
  Owner     Owner?  @relation(fields: [ownerCpf], references: [cpf])
  ownerCpf  String?
}

model Owner {
  cpf             String @id
  name            String
  address         String
  telephoneNumber String
  dogs            Dog[]
}
